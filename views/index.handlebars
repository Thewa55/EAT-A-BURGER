<div class="container-fluid">
  <div class="row">
    <h1 class="col">Welcome to Eat-Da-Burger!</h1>
  </div>

  <div class="row">
    <div class="col-3">
      <h2>Eat ME!!!</h2>
      <ul>
        {{#each burgers}}
          {{#unless eat}}
            {{> burger/burgers-block eat=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">

    </div>
    <div class="col-3">
      <h2>Eaten :(</h2>
      <ul>
        {{#each burgers}}
          {{#if eat}}
            {{> burgers/burgers-block eat=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>