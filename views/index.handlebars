<div class="container-fluid">
  <div class="row">
    <div class="col-3">
      <h2>Eat ME!!!</h2>
      <ul>
        {{#each burgers}}
          {{#unless hungry}}
            {{> burger/burgers-block eat=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <form class="create-form">
        <div class="form-group">
          <label for="burg">Burger</label>
          <input type="text" id="burg" name="burger_name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
    <div class="col-3">
      <h2>Eaten :(</h2>
      <ul class="eatan">
        {{#each burgers}}
          {{#if hungry}}
            {{> burger/burgers-block eat=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>