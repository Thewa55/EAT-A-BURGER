<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-3 list-container text-left">
      <h2 class="cardtitle">Eat ME!!!</h2>
      <div class="card">
      <ul class="list-group">
        {{#each burgers}}
          {{#unless hungry}}
            {{> burger/burgers-block eat=true}}
          {{/unless}}
        {{/each}}
      </ul>
      </div>
    </div>
    <div class="col-6 text-center mt-5">
      <form class="create-form">
        <div class="form-group">
          <label class="burgmsg" for="burg"> What burger would you like?</label>
          <input type="text" class="form-control" id="burg" name="burger_name">
        </div>
        <button type="submit" class="btn btn-success">Add Burger</button>
      </form>
    </div>
    <div class="col-3  text-right list-container">
      <h2 class="cardtitle">Eaten :(</h2>
      <div class="card">
        <ul class="list-group">
          {{#each burgers}}
            {{#if hungry}}
              {{> burger/burgers-block eat=false}}
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>